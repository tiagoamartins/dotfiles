#!/bin/sh

if [ -d "$1" ]
then
	if [ -x /usr/bin/dircolors -o -x /usr/local/bin/dircolors ]
	then
		eval `dircolors -b "$HOME/.dir_colors"`
		exec ls --color=force -lF "$1"
	else
		CLICOLOR=1 CLICOLOR_FORCE=1 LSCOLORS=ExGxFxdxCxfxDxxbadacad exec ls -lF "$1"
	fi
else
	case $1 in
		*.json)
			if [ -x `which jq 2> /dev/null` ]
			then
				exec jq -C . "$1"
			fi;;
	esac
fi

exit 1
